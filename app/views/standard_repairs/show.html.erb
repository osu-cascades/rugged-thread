<div class="row mb-5">
  <div class="col">
    <h1>Standard Repair Information</h1>
  </div>
  <div class="col text-end">
    <%= link_to '&laquo Back to List'.html_safe, standard_repairs_path, class: 'btn btn-outline-primary me-5' %>
    <%= link_to 'Edit', edit_standard_repair_path(@standard_repair), class: 'btn btn-outline-primary me-2' %>
    <%= button_to 'Delete', @standard_repair, method: :delete, class: 'btn btn-outline-danger' %>
  </div>
</div>

<dl class="row">
  <dt class="col-sm-3">Name</dt>
  <dd class="col-sm-9">
    <%= @standard_repair.name %>
  </dd>
  <dt class="col-sm-3">Method</dt>
  <dd class="col-sm-9">
    <%= @standard_repair.method %>
  </dd>
  <dt class="col-sm-3">Description</dt>
  <dd class="col-sm-9">
    <%= @standard_repair.description %>
  </dd>
  <dt class="col-sm-3">Level</dt>
  <dd class="col-sm-9">
    <%= @standard_repair.level %>
  </dd>
  <dt class="col-sm-3">Charge</dt>
  <dd class="col-sm-9">
    <%= number_to_currency(@standard_repair.charge) %>
  </dd>
</dl>

<div class="row mt-5">
  <div class="col">
    <h2><%= pluralize(@standard_repair.standard_complications.count, 'Standard Complication') %></h2>
  </div>
  <div class="col text-end">
    <%= link_to 'Add Standard Complication', new_standard_repair_standard_complication_path(@standard_repair), class: 'btn btn-outline-primary' %>
  </div>
</div>


<%= render 'standard_complications/table', standard_complications: @standard_complications %>

