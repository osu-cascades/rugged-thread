<p id="notice"><%= notice %></p>

<h1>Standard Repairs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Sub repair</th>
      <th>Method</th>
      <th>Complications</th>
      <th>Description</th>
      <th>Charge</th>
      <th>Fee type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @standard_repairs.each do |standard_repair| %>
      <tr>
        <td><%= standard_repair.name %></td>
        <td><%= standard_repair.sub_repair %></td>
        <td><%= standard_repair.method %></td>
        <td><%= standard_repair.complications %></td>
        <td><%= standard_repair.description %></td>
        <td><%= standard_repair.charge %></td>
        <td><%= standard_repair.fee_type %></td>
        <td><%= link_to 'Show', standard_repair %></td>
        <td><%= link_to 'Edit', edit_standard_repair_path(standard_repair) %></td>
        <td><%= link_to 'Destroy', standard_repair, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

