<div class="row">
  <div class="col">
    <h1>Inventory Item <%= @inventory_item.id %></h1>
  </div>
  <div class="col-7 text-end">
    <%= link_to '&laquo Back to Repair'.html_safe, repair_path(@inventory_item.repair), class: 'btn btn-outline-primary me-5' %>
    <%= link_to 'Edit', edit_inventory_item_path(@inventory_item), class: 'btn btn-outline-primary me-2' %>
    <%= button_to 'Delete', @inventory_item, method: :delete, class: 'btn btn-outline-danger' %>
  </div>
</div>

<p class="mb-5">
  For <%= link_to @inventory_item.repair, @inventory_item.repair %> on <%= link_to "Item #{@inventory_item.repair.item.id}", @inventory_item.repair.item %> in
    <%= link_to @inventory_item.repair.item.work_order, @inventory_item.repair.item.work_order %>.
</h2>

<dl class="row">
  <dt class="col-sm-3">Standard Inventory Item</dt>
  <dd class="col-sm-9">
    <%= link_to @inventory_item.standard_inventory_item, @inventory_item.standard_inventory_item %>
  </dd>
  <dt class="col-sm-3">Price</dt>
  <dd class="col-sm-9">
    <%= @inventory_item.price.format %>
  </dd>
</dl>
