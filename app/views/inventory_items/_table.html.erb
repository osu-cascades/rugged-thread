<table class="table table-hover table-borderless" id="inventory_items_table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col" class="text-end">Price</th>
    </tr>
  </thead>
  <tbody>
    <% inventory_items.each do |inventory_item| %>
      <tr class="<%= dom_class(inventory_item) %> clickable-row" id="<%= dom_id(inventory_item) %>" data-href="<%= inventory_item_path(inventory_item) %>">
        <td><%= inventory_item.standard_inventory_item %></td>
        <td class="text-end"><%= inventory_item.price.format %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<script>
var clickable_rows = document.getElementsByClassName('clickable-row')
Array.prototype.forEach.call(clickable_rows, (row) => {
    row.addEventListener('click', () => {
      window.location = row.dataset.href
    })
})
</script>
