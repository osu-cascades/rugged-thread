<table class="table table-hover" id="inventory_items_table">
  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">Name</th>
      <th scope="col" class="text-end">Price</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% inventory_items.each do |inventory_item| %>
      <tr>
        <th scope="row"><%= inventory_item.id %></th>
        <td><%= link_to inventory_item.standard_inventory_item, inventory_item.standard_inventory_item %></td>
        <td class="text-end"><%= inventory_item.price.format %></td>
        <td class="text-end">
          <%= link_to 'Details', inventory_item_path(inventory_item), class: 'btn btn-outline-secondary btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
