<div class="row mb-5">
  <div class="col">
    <h1>Fees</h1>
  </div>
  <div class="col text-end">
    <%= link_to 'Add New Fee', new_fee_path, class: 'btn btn-outline-primary' %>
  </div>
</div>

<table class="table table-hover" id="fees_table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col" class="text-end">Price</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @fees.each do |fee| %>
      <tr class="<%= dom_class(fee) %>" id="<%= dom_id(fee) %>">
        <td>
          <%= fee %>
        </td>
        <td class="text-end">
          <%= number_to_currency(fee.price) %>
        </td>
        <td class="text-end">
          <%= link_to 'Details', fee, class: 'btn btn-light btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
