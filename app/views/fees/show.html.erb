<div class="row mb-5">
  <div class="col">
    <h1>Fee <%= @fee.position %></h1>
    <h2>
      For <%= link_to "Item #{@fee.item.position}", @fee.item %> on
      <%= link_to @fee.item.work_order, @fee.item.work_order %>
    </h2>
  </div>
  <div class="col-7 text-end">
    <%= link_to '&laquo Back to Item'.html_safe, item_path(@fee.item), class: 'btn btn-outline-primary me-5' %>
    <%= link_to 'Edit', edit_fee_path(@fee), class: 'btn btn-outline-primary me-2' %>
    <%= button_to 'Delete', @fee, method: :delete, class: 'btn btn-outline-danger' %>
  </div>
</div>

<p>
  <strong>Standard Fee:</strong>
  <%= link_to @fee.standard_fee, @fee.standard_fee %>
</p>

<p>
  <strong>Item:</strong>
  <%= link_to @fee.item.brand, @fee.item.brand %> <%= link_to @fee.item.item_type, @fee.item.item_type %>
</p>

<p>
  <strong>Price:</strong>
  <%= number_to_currency(@fee.price/100.0) %>
</p>
