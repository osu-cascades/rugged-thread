<div class="row mb-5">
  <div class="col">
    <h1>Brands</h1>
  </div>
  <div class="col text-end">
    <%= link_to 'Add New Brand', new_brand_path, class: 'btn btn-outline-primary' %>
  </div>
</div>

<table class="table table-hover" id="brands_table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @brands.each do |brand| %>
      <tr class="<%= dom_class(brand) %>" id="<%= dom_id(brand) %>">
        <td>
          <%= link_to "#{brand.name}", brand %>
        </td>
        <td>
          <%= link_to 'Edit', edit_brand_path(brand), class: 'btn btn-light btn-sm mr-4' %>
          <%= link_to'Delete', brand, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn text-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
