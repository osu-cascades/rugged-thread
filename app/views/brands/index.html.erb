<div class="row mb-5">
  <div class="col">
    <% if params[:show_archive] == 'true' %>
      <h1>Archived Brands</h1>
    <% else %>
      <h1>Active Brands</h1>
    <% end %>
  </div>
  <div class="col text-end">
    <%= link_to 'Add New Brand', new_brand_path, class: 'btn btn-outline-primary' %>
    <% if params[:show_archive] == 'true' %>
      <%= link_to 'Active Brands', brands_path(), class: 'btn btn-outline-success me-2' %>
    <% else %>
      <%= link_to 'Archived Brands', brands_path(show_archive: 'true'), class: 'btn btn-outline-success me-2' %>
    <% end %>
  </div>
</div>

<table class="table table-hover" id="brands_table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @brands.each do |brand| %>
      <tr class="<%= dom_class(brand) %>" id="<%= dom_id(brand) %>">
        <td>
          <%= brand %>
        </td>
        <td class="text-end">
          <%= link_to 'Details', brand, class: 'btn btn-outline-secondary btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if params[:show_archive] == 'true' %>
  <%= pagination_nav(@pagy, brands_path(page: @pagy.prev, show_archive: 'true'), brands_path(page: @pagy.next, show_archive: 'true')) %>
<% else %>
  <%= pagination_nav(@pagy, brands_path(page: @pagy.prev), brands_path(page: @pagy.next)) %>
<% end %>