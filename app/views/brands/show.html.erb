<div class="row mb-5">
  <div class="col">
    <h1><%= @brand %></h1>
  </div>
  <div class="col-7 text-end">
    <%= link_to '&laquo Back to List'.html_safe, brands_path, class: 'btn btn-outline-primary me-5' %>
    <%= link_to 'Edit', edit_brand_path(@brand), class: 'btn btn-outline-primary me-2' %>
    <%= link_to_archive_or_recover(@brand) %>
    <%= button_to 'Delete', @brand, method: :delete, class: 'btn btn-outline-danger' %>
  </div>
</div>

<h2 class="mt-5"><%= pluralize(@items.count, 'Item') %></h2>

<%= render 'items/table', items: @items %>
