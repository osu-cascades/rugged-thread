<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Time</th>
      <th>Solo Tech</th>
      <th>Repair charge</th>
      <th>Repair number</th>
      <th>Task type</th>
      <th>Technican Assigned</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.time %></td>
        <td><%= task.tech_name %></td>
        <td><%= task.repair_charge %></td>
        <td><%= task.repair_number %></td>
        <td><%= task.task_type_name %></td>
        <td><%= task.technician_name %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

