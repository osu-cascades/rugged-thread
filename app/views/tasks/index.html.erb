<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Time</th>
      <th>Number</th>
      <th>Technician</th>
      <th>Repair charge</th>
      <th>Task type</th>
      <th>Technician</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.time %></td>
        <td><%= task.number %></td>
        <td><%= task.technician %></td>
        <td><%= task.repair_charge %></td>
        <td><%= task.task_type_id %></td>
        <td><%= task.technician_id %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

