<div class="row mb-5">
  <div class="col">
    <h1>Employees</h1>
  </div>
  <div class="col text-end">
    <%= link_to 'Add New Employee', new_user_path, class: 'btn btn-outline-primary' %>
  </div>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">Name</th>
      <th scope="col">Email Address</th>
      <th scope="col">Role</th>
      <th scope="col">Status</th>
      <th scope="col">Last Seen</th>
      <th scope="col">End Date</th>
      <th scope="col">Efficiency</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr class="<%= dom_class(user) %>" id="<%= dom_id(user) %>">
        <th scope="row">
          <%= user.id %>
        </th>
        <td>
          <%= link_to user, user %>
        </td>
        <td>
          <%= user.email %>
        </td>
        <td>
          <%= 'role' %>
        </td>
        <td>
          <%= 'status' %>
        </td>
        <td>
          <%= 'sign in last' %>
        </td>
        <td>TODO</td>
        <td>TODO</td>
        <td>
          <%= link_to 'Edit', edit_user_path(user), class: 'btn btn-light btn-sm mr-4' %>
          <% unless current_user == user %>
            <%= link_to 'Delete', "/admin/users/#{user.id}", method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn text-danger btn-sm' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
