<div class="row mb-5">
  <div class="col">
    <h1>Work Order <%= @work_order.id %></h1>
  </div>
  <div class="col text-end">
    <%= link_to '&laquo Back'.html_safe, :back, class: 'btn btn-outline-primary' %>
    <%= link_to 'Edit', edit_work_order_path(@work_order), class: 'btn btn-outline-primary' %>
  </div>
</div>

<p>
  <strong>Customer:</strong>
  <%= link_to @work_order.customer.full_name, @work_order.customer %>
</p>

<p>
  <strong>In date:</strong>
  <%= @work_order.in_date %>
</p>

<p>
  <strong>Estimate:</strong>
  <%= @work_order.estimate %>
</p>

<p>
  <strong>Shipping:</strong>
  <%= @work_order.shipping %>
</p>

<h2 class="mt-5">Items</h2>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">Item Status</th>
      <th scope="col">Due Date</th>
      <th scope="col">Estimate</th>
      <th scope="col">Labor Estimate</th>
      <th scope="col">Notes</th>
      <th scope="col">Brand</th>
      <th scope="col">Item Type</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <th scope="row"><%= item.id %></th>
        <td><%= item.item_status.name %></td>
        <td><%= item.due_date %></td>
        <td><%= item.estimate %></td>
        <td><%= item.labor_estimate %></td>
        <td><%= item.notes %></td>
        <td><%= item.brand.name %></td>
        <td><%= item.item_type.name %></td>
        <td>
          <%= link_to 'View', work_order_item_path(@work_order, item), class: 'btn btn-light btn-sm mr-4' %>
          <%= link_to 'Edit', edit_item_path(item), class: 'btn btn-light btn-sm mr-4' %>
          <%= link_to 'Delete', work_order_item_path(@work_order, item), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn text-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2 class="mt-5">Add Item</h2>

<div class="form-container-wide">
  <%= render 'items/form', item: @item, work_order: @work_order %>
</div>
