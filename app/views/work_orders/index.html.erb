<div class="row mb-5">
  <div class="col">
    <h1>Work Orders</h1>
  </div>
  <div class="col text-end">
    <%= link_to 'Add New Work Order', new_work_order_path, class: 'btn btn-outline-primary' %>
  </div>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">Customer</th>
      <th scope="col">Customer Type</th>
      <th scope="col">In date</th>
      <th scope="col">Estimate</th>
      <th scope="col">Shipping</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @work_orders.each do |work_order| %>
      <tr class="<%= dom_class(work_order) %>" id="<%= dom_id(work_order) %>">
        <th scope="row"><%= work_order.id %></th>
        <td><%= link_to work_order.customer, work_order.customer %></td>
        <td><%= link_to work_order.customer.customer_type, work_order.customer.customer_type %></td>
        <td><%= work_order.in_date %></td>
        <td><%= work_order.estimate %></td>
        <td><%= work_order.shipping %></td>
        <td>
          <%= link_to 'View', work_order, class: 'btn btn-light btn-sm mr-4' %>
          <%= link_to 'Edit', edit_work_order_path(work_order), class: 'btn btn-light btn-sm mr-4' %>
          <%= link_to 'Delete', work_order, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn text-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
