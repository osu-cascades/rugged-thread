<div class="row mb-5">
  <div class="col">
    <h1>Work Orders</h1>
  </div>
  <div class="col text-end">
    <%= link_to 'Add New Work Order', new_work_order_path, class: 'btn btn-outline-primary' %>
  </div>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">In date</th>
      <th scope="col">Estimate</th>
      <th scope="col">Shipping</th>
    </tr>
  </thead>

  <tbody>
    <% @work_orders.each do |work_order| %>
      <tr>
        <td><%= work_order.in_date %></td>
        <td><%= work_order.estimate %></td>
        <td><%= work_order.shipping %></td>
        <td><%= link_to 'Show', work_order %></td>
        <td><%= link_to 'Edit', edit_work_order_path(work_order) %></td>
        <td><%= link_to 'Destroy', work_order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
