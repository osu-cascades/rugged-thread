<table class="table table-hover" id="work_orders_table">
  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">Customer</th>
      <th scope="col">Customer type</th>
      <th scope="col">In date</th>
      <th scope="col">Estimate</th>
      <th scope="col">Ship?</th>
      <th scope="col">Created by</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% work_orders.each do |work_order| %>
      <tr class="<%= dom_class(work_order) %>" id="<%= dom_id(work_order) %>">
        <th scope="row"><%= work_order.id %></th>
        <td><%= link_to_unless(controller.controller_name == 'customers', work_order.customer, work_order.customer) %></td>
        <td><%= link_to work_order.customer.customer_type, work_order.customer.customer_type %></td>
        <td><%= work_order.in_date.to_s(:long) %></td>
        <td><%= number_to_currency(work_order.estimate) %></td>
        <td><%= work_order.shipping ? 'ğŸ“¦' : '' %></td>
        <td><%= link_to_unless(controller.controller_name == 'users', work_order.creator, work_order.creator) %></td>
        <td class="text-end">
          <%= link_to 'Details', work_order, class: 'btn btn-light btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
