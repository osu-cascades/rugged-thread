<div class="row mb-5">
  <div class="col">
    <h1><%= @item_type %></h1>
  </div>
  <div class="col-7 text-end">
    <%= link_to '&laquo Back to List'.html_safe, item_types_path, class: 'btn btn-outline-primary me-5' %>
    <%= link_to 'Edit', edit_item_type_path(@item_type), class: 'btn btn-outline-primary me-2' %>
    <% if @item_type.kept? %>
      <%= button_to 'Archive', archive_item_type_path(@item_type), method: :patch, class: 'btn btn-outline-success me-2' %>
    <% else %>
      <%= button_to 'Recover', recover_item_type_path(@item_type), method: :patch, class: 'btn btn-outline-success me-2' %>
    <% end %>
    <%= button_to 'Delete', @item_type, method: :delete, class: 'btn btn-outline-danger' %>
  </div>
</div>

<h2 class="mt-5"><%= pluralize(@items.count, 'Item') %></h2>

<%= render 'items/table', items: @items %>
