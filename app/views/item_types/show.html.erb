<div class="row mb-5">
  <div class="col">
    <h1><%= @item_type %></h1>
  </div>
  <div class="col text-end">
    <%= link_to '&laquo Back to List'.html_safe, item_types_path, class: 'btn btn-outline-primary me-5' %>
    <%= link_to 'Edit', edit_item_type_path(@item_type), class: 'btn btn-outline-primary me-2' %>
    <%= button_to 'Delete', @item_type, method: :delete, class: 'btn btn-outline-danger' %>
  </div>
</div>

<h2 class="mt-5"><%= pluralize(@items.count, 'Item') %></h2>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">Work Order</th>
      <th scope="col">Item Status</th>
      <th scope="col">Due Date</th>
      <th scope="col">Estimate</th>
      <th scope="col">Labor Estimate</th>
      <th scope="col">Notes</th>
      <th scope="col">Brand</th>
      <th scope="col">Item Type</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <th scope="row"><%= item.id %></th>
        <td><%= link_to item.work_order, item.work_order %></td>
        <td><%= link_to item.item_status, item.item_status %></td>
        <td><%= item.due_date.to_formatted_s(:long) %></td>
        <td><%= number_to_currency(item.estimate) %></td>
        <td><%= number_to_currency(item.labor_estimate) %></td>
        <td><%= item.notes %></td>
        <td><%= link_to item.brand, item.brand %></td>
        <td><%= item.item_type %></td>
        <td class="text-end">
          <%= link_to 'Details', item, class: 'btn btn-light btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
