<div class="row mb-5">
  <div class="col">
    <h1>Item Types</h1>
  </div>
  <div class="col text-end">
    <%= link_to 'Add New Item Type', new_item_type_path, class: 'btn btn-outline-primary' %>
  </div>
</div>

<table class="table table-hover" id="item_types_table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @item_types.each do |item_type| %>
      <tr class="<%= dom_class(item_type) %>" id="<%= dom_id(item_type) %>">
        <td>
          <%= item_type %>
        </td>
        <td class="text-end">
          <%= link_to 'Details', item_type, class: 'btn btn-outline-secondary btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
