<div class="row mb-5">
  <div class="col">
    <h1>
      Item <%= @item.id %> of <%= @item.work_order.items.length %>
      <span class="fs-6 badge bg-light fw-normal align-top">
        <%= link_to @item.item_status, @item.item_status, class: 'text-decoration-none' %>
      </span>
    </h1>
    From <%= link_to @item.work_order, @item.work_order %> by       <%= link_to @item.work_order.creator, @item.work_order.creator %>
  </div>
  <div class="col text-end">
    <%= link_to '&laquo Back to Work Order'.html_safe, @item.work_order, class: 'btn btn-outline-primary me-5' %>
    <%= link_to 'Edit', edit_item_path(@item), class: 'btn btn-outline-primary me-2' %>
    <%= link_to 'Print', "javascript:if(window.print)window.print()", class: 'btn btn-outline-primary me-2' %>
    <%= link_to 'Delete', @item, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger' %>
  </div>
</div>

<h2 class="display-1">
  <%= link_to @item.item_type, @item.item_type %>
  <span class="fs-6 badge bg-light fw-normal align-top">
    <%= link_to @item.brand, @item.brand %>
  </span>
</h2>
<p>
  <strong>Notes:</strong>
  <%= @item.notes %>
</p>

<div class="row">
  <div class="col">
    <p>
      <%= link_to @item.work_order.customer, @item.work_order.customer %> (<%= link_to @item.work_order.customer.customer_type, @item.work_order.customer.customer_type %>)
    </p>
    <p>
      <%= link_to @item.work_order.customer.phone_number, "tel:#{@item.work_order.customer.phone_number}" %>
    </p>
  </div>
  <div class="col">
    <p>
      <strong>Date in:</strong>
      <%= @item.work_order.in_date.to_formatted_s(:long) %>
    </p>
    <p>
      <strong>Due date:</strong>
      <%= @item.due_date.to_s(:long) %>
    </p>

  </div>

  <div class="col">
    <p>
      <strong>Estimate:</strong>
      <%= number_to_currency(@item.estimate) %>
    </p>

    <p>
      <strong>Labor:</strong>
      <%= number_to_currency(@item.labor_estimate) %>
    </p>
    <p>
      <strong>Fees:</strong>

    </p>
    <p>
      <strong>Discounts:</strong>
    </p>
    <p>
      <strong>Level:</strong>
      <%= %>
    </p>

  </div>
</div>

<h2 class="mt-5">Repairs</h2>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">Name</th>
      <th scope="col">Notes</th>
      <th scope="col">Method</th>
      <th scope="col">Description</th>
      <th scope="col" class="text-end">Price</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @repairs.each do |repair| %>
      <tr>
        <th scope="row"><%= repair.id %></th>
        <td><%= link_to repair.standard_repair, repair.standard_repair %></td>
        <td><%= repair.notes %></td>
        <td><%= repair.standard_repair.method %></td>
        <td><%= repair.standard_repair.description %></td>
        <td class="text-end"><%= number_to_currency(repair.price) %></td>
        <td class="text-end">
          <%= link_to 'Details', item_repair_path(@item, repair), class: 'btn btn-light btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="exclude-from-print">
  <h2 class="mt-5">Add Repair</h2>

  <div class="form-container">
    <%= render 'repairs/form', repair: @repair, item: @item %>
  </div>
</div>
