<table class="table table-hover" id="items_table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Brand</th>
      <th scope="col">Item Type</th>
      <th scope="col">Item Status</th>
      <th scope="col">Due Date</th>
      <th scope="col">Level</th>
      <th scope="col">Notes</th>
      <th scope="col">Ship?</th>
      <th scope="col" class="text-end">Estimate</th>
      <th scope="col" class="text-end">Labor Estimate</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% items.each do |item| %>
      <tr>
        <th scope="row"><%= item.position %></th>
        <td><%= link_to item.brand, item.brand %></td>
        <td><%= link_to item.item_type, item.item_type %></td>
        <td><%= link_to item.item_status, item.item_status %></td>
        <td><%= item.due_date&.to_formatted_s(:long) %></td>
        <td><%= item.level %></td>
        <td><%= item.notes %></td>
        <td><%= item.shipping ? 'ðŸ“¦' : '' %></td>
        <td class="text-end"><%= number_to_currency(item.price_estimate/100.0) %></td>
        <td class="text-end"><%= number_to_currency(item.estimated_price_of_labor/100.0) %></td>
        <td class="text-end">
          <%= link_to 'Details', item_path(item), class: 'btn btn-outline-secondary btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
