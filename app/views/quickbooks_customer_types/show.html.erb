<div class="row mb-5">
  <div class="col">
    <h1><%= @customer_type %></h1>
  </div>
  <div class="col-7 text-end">
    <%= link_to "&laquo Back to List".html_safe, quickbooks_customer_types_path, class: "btn btn-outline-primary me-5" %>
    <%= link_to "Edit", edit_quickbooks_customer_type_path(@customer_type.id), class: "btn btn-outline-primary me-2" %>
    <%= qb_link_to_archive_or_recover(@customer_type) %>
    <%= button_to "Delete", quickbooks_customer_type_path(@customer_type.id), method: :delete, class: "btn btn-outline-danger" %>
  </div>
</div>

