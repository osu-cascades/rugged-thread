<div class="row mb-5">
  <div class="col">
    <h1>Discount Information</h1>
  </div>
  <div class="col text-end">
    <%= link_to '&laquo Back to List'.html_safe, discounts_path, class: 'btn btn-outline-primary me-5' %>
    <%= link_to 'Edit', edit_discount_path(@discount), class: 'btn btn-outline-primary me-2' %>
    <%= button_to 'Delete', @discount, method: :delete, class: 'btn btn-outline-danger' %>
  </div>
</div>

<dl class="row">
  <dt class="col-sm-3">Name</dt>
  <dd class="col-sm-9">
    <%= @discount.name %>
  </dd>
  <dt class="col-sm-3">Percentage Amount</dt>
  <dd class="col-sm-9">
    <%= @discount.percentage_amount %>
  </dd>
  <dt class="col-sm-3">Dollar Amount</dt>
  <dd class="col-sm-9">
    <%= @discount.dollar_amount %>
  </dd>
</dl>
