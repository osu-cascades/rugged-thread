<div class="row mb-5">
  <div class="col">
    <h1>Discount <%= @discount.position %></h1>
    <h2>
      For <%= link_to "Item #{@discount.item.position}", @discount.item %> on
      <%= link_to @discount.item.work_order, @discount.item.work_order %>
    </h2>
  </div>
  <div class="col text-end">
    <%= link_to '&laquo Back to Item'.html_safe, item_path(@discount.item), class: 'btn btn-outline-primary me-5' %>
    <%= link_to 'Edit', edit_discount_path(@discount), class: 'btn btn-outline-primary me-2' %>
    <%= button_to 'Delete', @discount, method: :delete, class: 'btn btn-outline-danger' %>
  </div>
</div>

<p>
  <strong>Standard discount:</strong>
  <%= link_to @discount.standard_discount, @discount.standard_discount %>
</p>

<p>
  <strong>Item:</strong>
  <%= link_to @discount.item.brand, @discount.item.brand %> <%= link_to @discount.item.item_type, @discount.item.item_type %>
</p>

<p>
  <strong>Percentage Amount:</strong>
  <%= @discount.percentage_amount %>
</p>

<p>
  <strong>Dollar Amount:</strong>
  <%= @discount.price %>
</p>