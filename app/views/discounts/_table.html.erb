<table class="table table-hover" id="discounts_table">
  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">Name</th>
      <th scope="col">Percentage Amount</th>
      <th scope="col">Dollar Amount</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% discounts.each do |discount| %>
      <tr>
        <th scope="row"><%= discount.id %></th>
        <td><%= link_to discount.standard_discount, discount.standard_discount %></td>
        <td><%= discount.standard_discount.percentage_amount %></td>
        <td><%= discount.standard_discount.dollar_amount %></td>
        <td class="text-end">
          <%= link_to 'Details', discount_path(discount), class: 'btn btn-light btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
