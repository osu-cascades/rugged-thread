<script type="text/javascript">
  function updateDiscountDollarAmount() {
    // Autopopulation
    var e = document.getElementById("discount_standard_discount_id");
    var standard_discount_id = e.value;

    // Call to retrive standard discount JSON
    const fetchResponsePromise = fetch(`/standard_discounts/${standard_discount_id}.json`).then((response) => {
      return response.json();
    }).then((data) => {
      if (data.dollar_amount) {
        const dollar_field = document.getElementById('discount_dollar_amount');
        // Set the value
        dollar_field.value = data.dollar_amount; 
        // Enable if disabled
        dollar_field.disabled = false;
        const percent = document.getElementById('discount_percentage_amount');
        // Disable unused field & clear it
        percent.disabled = true;
        percent.value = "";
      }
      else if (data.percentage_amount) {
        const percent = document.getElementById('discount_percentage_amount');
        // Set the value
        percent.value = data.percentage_amount; 
        // Enable if disabled
        percent.disabled = false;
        const dollar_amount = document.getElementById('discount_dollar_amount');
        // Disable unused field & clear it
        dollar_amount.disabled = true;
        dollar_amount.value = "";
      }
    });

  };
</script>

