<p id="notice"><%= notice %></p>

<h1>Complication Types</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @complication_types.each do |complication_type| %>
      <tr>
        <td><%= complication_type.description %></td>
        <td><%= link_to 'Show', complication_type %></td>
        <td><%= link_to 'Edit', edit_complication_type_path(complication_type) %></td>
        <td><%= link_to 'Destroy', complication_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

