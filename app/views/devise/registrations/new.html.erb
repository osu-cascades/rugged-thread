<div class="container-auth text-center">
  <h1 class="h3 font-weight-normal">Register a New Account</h1>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-auth text-left'}) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="form-row mb-4">
      <div class="col">
        <%= f.label :name, class: 'visually-hidden' %>
        <%= f.text_field :name, autofocus: true, required: true, placeholder: 'Full name', class: 'form-control' %>
      </div>
    </div>
    <div class="form-row mb-4">
      <div class="col">
        <%= f.label :email, class: 'visually-hidden form-label' %>
        <%= f.email_field :email, required: true, autocomplete: 'email', placeholder: 'Email address', class: 'form-control' %>
      </div>
    </div>
    <div class="form-row mb-4">
      <div class="col mb-2">
        <%= f.label :password, class: 'visually-hidden form-label' %>
        <%= f.password_field :password, required: true, autocomplete: 'new-password', placeholder: 'Password', class: 'form-control mb-0' %>
        <% if @minimum_password_length %>
          <small class="form-text">(<%= @minimum_password_length %> characters minimum)</small>
        <% end %>
      </div>
      <div class="col">
        <%= f.label :password_confirmation, class: 'visually-hidden form-label' %>
        <%= f.password_field :password_confirmation, required: true, placeholder: 'Password confirmation', class: 'form-control' %>
      </div>
    </div>
    <div class="mb-4 text-center">
      <% #recaptcha_tags %>
    </div>
    <%= f.submit 'Register', class: 'btn btn-lg btn-primary btn-block' %>
  <% end %>
  <div class="mt-4">
    Already registered? Please <%= link_to 'sign in', new_user_session_path %>.
  </div>
</div>
