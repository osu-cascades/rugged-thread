<div class="row mb-5">
  <div class="col">
    <h1><%= @customer.first_name %> <%= @customer.last_name %></h1>
  </div>
  <div class="col text-end">
    <%= link_to '&laquo Back to List'.html_safe, customers_path, class: 'btn btn-outline-primary me-4' %>
    <%= link_to 'Edit', edit_customer_path(@customer), class: 'btn btn-outline-primary float-right' %>
  </div>
</div>

<p>
  <strong>Business name:</strong>
  <%= @customer.business_name %>
</p>

<p>
  <strong>Phone number:</strong>
  <%= @customer.phone_number %>
</p>

<p>
  <strong>Email address:</strong>
  <%= mail_to @customer.email_address %>
</p>

<p>
  <strong>Street address:</strong>
  <%= @customer.street_address %>
</p>

<p>
  <strong>City:</strong>
  <%= @customer.city %>
</p>

<p>
  <strong>State:</strong>
  <%= @customer.state %>
</p>

<p>
  <strong>Zip code:</strong>
  <%= @customer.zip_code %>
</p>

<h2 class="mt-5">Work Orders</h2>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">Work Order</th>
      <th scope="col">In date</th>
      <th scope="col">Estimate</th>
      <th scope="col">Shipping</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @work_orders.each do |work_order| %>
      <tr>
        <th scope="row"><%= work_order.id %></th>
        <td><%= link_to work_order, work_order %></td>
        <td><%= work_order.in_date %></td>
        <td><%= work_order.estimate %></td>
        <td><%= work_order.shipping %></td>
        <td>
          <%= link_to 'View', work_order, class: 'btn btn-light btn-sm mr-4' %>
          <%= link_to 'Edit', edit_work_order_path(work_order), class: 'btn btn-light btn-sm mr-4' %>
          <%= link_to 'Destroy', work_order, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn text-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
