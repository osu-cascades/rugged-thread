<div class="row mb-5">
  <div class="col">
    <h1><%= @customer.first_name %> <%= @customer.last_name %></h1>
  </div>
  <div class="col text-end">
    <%= link_to '&laquo Back to List'.html_safe, customers_path, class: 'btn btn-outline-primary me-5' %>
    <%= link_to 'Edit', edit_customer_path(@customer), class: 'btn btn-outline-primary me-2' %>
    <%= link_to 'Delete', @customer, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger' %>
  </div>
</div>

<p>
  <strong>Type:</strong>
  <%= link_to @customer.customer_type, @customer.customer_type %>
</p>

<p>
  <strong>Business name:</strong>
  <%= @customer.business_name %>
</p>

<p>
  <strong>Email address:</strong>
  <%= mail_to @customer.email_address %>
</p>

<p>
  <strong>Phone number:</strong>
  <%= link_to @customer.phone_number, "tel:#{@customer.phone_number}" %>
</p>


<p>
  <strong>Street address:</strong>
  <%= @customer.street_address %>
</p>

<p>
  <strong>City:</strong>
  <%= @customer.city %>
</p>

<p>
  <strong>State:</strong>
  <%= @customer.state %>
</p>

<p>
  <strong>Zip code:</strong>
  <%= @customer.zip_code %>
</p>

<div class="row mt-5">
  <div class="col">
    <h2>Work Orders</h2>
  </div>
  <div class="col text-end">
    <%= link_to 'New Work Order', new_customer_work_order_path(@customer), class: 'btn btn-outline-primary' %>
  </div>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">Customer</th>
      <th scope="col">In date</th>
      <th scope="col">Estimate</th>
      <th scope="col">Shipping</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @work_orders.each do |work_order| %>
      <tr>
        <th scope="row"><%= work_order.id %></th>
        <td><%= link_to work_order.customer, work_order.customer %></td>
        <td><%= work_order.in_date %></td>
        <td><%= work_order.estimate %></td>
        <td><%= work_order.shipping %></td>
        <td>
          <%= link_to 'Details', work_order, class: 'btn btn-light btn-sm mr-4' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

