<div class="row">
  <div class="col">
    <h1>Special Order Item <%= @special_order_item.id %></h1>
  </div>
  <div class="col-7 text-end">
    <%= link_to '&laquo Back to Repair'.html_safe, repair_path(@special_order_item.repair), class: 'btn btn-outline-primary me-5' %>
    <%= link_to 'Edit', edit_special_order_item_path(@special_order_item), class: 'btn btn-outline-primary me-2' %>
    <%= button_to 'Delete', @special_order_item, method: :delete, class: 'btn btn-outline-danger' %>
  </div>
</div>

<p class="mb-5">
  For <%= link_to @special_order_item.repair, @special_order_item.repair %> on <%= link_to "Item #{@special_order_item.repair.item.id}", @special_order_item.repair.item %> in
    <%= link_to @special_order_item.repair.item.work_order, @special_order_item.repair.item.work_order %>.
</h2>

<dl class="row">
  <dt class="col-sm-3">Special Order Item</dt>
  <dd class="col-sm-9">
    <%= @special_order_item %>
  </dd>
  <dt class="col-sm-3">Price</dt>
  <dd class="col-sm-9">
    <%= number_to_currency(@special_order_item.price/100.0) %>
  </dd>
  <dt class="col-sm-3">Ordering fee</dt>
  <dd class="col-sm-9">
    <%= number_to_currency(@special_order_item.ordering_fee_price/100.0) %>
  </dd>
  <dt class="col-sm-3">Incoming Freight Fee</dt>
  <dd class="col-sm-9">
    <%= number_to_currency(@special_order_item.freight_fee_price/100.0) %>
  </dd>
</dl>
