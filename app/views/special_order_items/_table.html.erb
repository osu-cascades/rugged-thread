<table class="table table-hover" id="special_order_items_table">
  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">Name</th>
      <th scope="col" class="text-end">Price</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% special_order_items.each do |special_order_item| %>
      <tr>
        <th scope="row"><%= special_order_item.id %></th>
        <td><%= special_order_item %></td>
        <td class="text-end"><%= number_to_currency(special_order_item.price) %></td>
        <td class="text-end">
          <%= link_to 'Details', special_order_item_path(special_order_item), class: 'btn btn-light btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
