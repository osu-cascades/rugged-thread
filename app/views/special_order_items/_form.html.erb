<%= form_with(model: [repair, special_order_item]) do |form| %>
  <% if special_order_item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(special_order_item.errors.count, "error") %> prohibited this special order item from being saved:</h2>

      <ul>
        <% special_order_item.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row mb-3 align-items-end">
    <div class="col-5">
      <%= form.label :name, class: 'form-label' %>
      <%= form.text_field :name, class: 'form-control'%>
    </div>
    <div class="col">
      <%= form.label :price, class: 'form-label' %>
      <%= form.number_field :price, step: '0.01', class: 'form-control'%>
    </div>
    <div class="col">
      <%= form.label :ordering_fee_price, 'Ordering fee', class: 'form-label' %>
      <%= form.number_field :ordering_fee_price, step: '0.01', class: 'form-control'%>
    </div>
    <div class="col">
      <%= form.label :freight_fee_price, 'Freight fee', class: 'form-label' %>
      <%= form.number_field :freight_fee_price, step: '0.01', class: 'form-control'%>
    </div>
    <div class="col text-end">
      <div class="actions">
        <%= form.submit class: 'form-control btn btn-success' %>
      </div>
    </div>
  </div>
<% end %>
