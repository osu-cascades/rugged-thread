<div class="row mb-5">
  <div class="col">
    <h1><%= @customer_type %></h1>
  </div>
  <div class="col text-end">
    <%= link_to '&laquo Back to List'.html_safe, customer_types_path, class: 'btn btn-outline-primary me-5' %>
    <%= link_to 'Edit', edit_customer_type_path(@customer_type), class: 'btn btn-outline-primary me-2' %>
    <%= button_to 'Delete', @customer_type, method: :delete, class: 'btn btn-outline-danger' %>
  </div>
</div>

<h2 class="mt-5"><%= pluralize(@customer_type.customers_count, 'Customer') %></h2>

<%= render 'customers/table', customers: @customers %>
