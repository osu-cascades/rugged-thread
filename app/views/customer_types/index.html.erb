<div class="row mb-5">
  <div class="col">
    <h1>Customer Types</h1>
  </div>
  <div class="col text-end">
    <%= link_to 'Add New Customer Type', new_customer_type_path, class: 'btn btn-outline-primary' %>
  </div>
</div>

<table class="table table-hover" id="customer_types_table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @customer_types.each do |customer_type| %>
      <tr class="<%= dom_class(customer_type) %>" id="<%= dom_id(customer_type) %>">
        <td>
          <%= link_to "#{customer_type.name}", customer_type %>
        </td>
        <td>
          <%= link_to 'Edit', edit_customer_type_path(customer_type), class: 'btn btn-light btn-sm mr-4' %>
          <%= link_to'Delete', customer_type, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn text-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>