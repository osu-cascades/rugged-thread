<div class="row mb-5">
  <div class="col">
    <h1><%= @item_status %></h1>
    <% if @item_status.default? %>
    <p>This is the default item status.</p>
    <% end %>
  </div>
  <div class="col text-end">
    <%= link_to '&laquo Back to List'.html_safe, item_statuses_path, class: 'btn btn-outline-primary me-5' %>
    <%= link_to 'Edit', edit_item_status_path(@item_status), class: 'btn btn-outline-primary me-2' %>
    <%= button_to 'Delete', @item_status, method: :delete, class: 'btn btn-outline-danger' %>
  </div>
</div>

<h2 class="mt-5"><%= pluralize(@items.count, 'Item') %></h2>

<%= render 'items/table', items: @items %>
