<table class="table table-hover" id="standard_complications_table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Standard Repair</th>
      <th scope="col" class="text-end">Price</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% standard_complications.each do |standard_complication| %>
      <tr class="<%= dom_class(standard_complication) %>" id="<%= dom_id(standard_complication) %>">
        <td>
          <%= standard_complication %>
        </td>
        <td>
          <%= link_to_unless(controller.controller_name == 'standard_repairs', standard_complication.standard_repair, standard_complication.standard_repair) %>
        </td>
        <td class="text-end">
          <%= number_to_currency(standard_complication.price) %>
        </td>
        <td class="text-end">
          <%= link_to 'Details', standard_complication, class: 'btn btn-outline-secondary btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
