<div class="row mb-5">
  <div class="col">
    <% if params[:show_archive] == 'true' %>
      <h1>Archived Standard Complications</h1>
    <% else %>
      <h1>Standard Complications</h1>
    <% end %>
  </div>
  <div class="col text-end">
    <%= link_to 'Add New Standard Complication', new_standard_complication_path, class: 'btn btn-outline-primary' %>
    <% if params[:show_archive] == 'true' %>
      <%= link_to 'Active Standard Complications', standard_complications_path(), class: 'btn btn-outline-success me-2' %>
    <% else %>
      <%= link_to 'Archived Standard Complications', standard_complications_path(show_archive: 'true'), class: 'btn btn-outline-success me-2' %>
    <% end %>
  </div>
</div>

<%= form_with url: standard_complications_path, method: :get, data: { turbo_frame: 'standard_complications' } do |f| %>
  <div class="row">
    <div class="col-8">
      <%= f.search_field :query, value: params[:query], class: 'form-control', autofocus: true, placeholder: 'Search. Type a complication name or repair name and hit [enter]' %>
    </div>
  </div>
<% end %>

<%= turbo_frame_tag 'standard_complications' do %>
  <%= render 'table', standard_complications: @standard_complications %>

  <% if params[:show_archive] == 'true' %>
    <%= pagination_nav(@pagy, standard_complications_path(page: @pagy.prev, query: params[:query], show_archive: 'true'), standard_complications_path(page: @pagy.next, query: params[:query], show_archive: 'true')) %>
  <% else %>
    <%= pagination_nav(@pagy, standard_complications_path(page: @pagy.prev, query: params[:query]), standard_complications_path(page: @pagy.next, query: params[:query])) %>
  <% end %>
<% end %>
