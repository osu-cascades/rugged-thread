<div class="row mb-5">
  <div class="col">
    <h1>Standard Complication Information</h1>
  </div>
  <div class="col text-end">
    <%= link_to '&laquo Back to List'.html_safe, standard_complications_path, class: 'btn btn-outline-primary me-5' %>
    <%= link_to 'Edit', edit_standard_complication_path(@standard_complication), class: 'btn btn-outline-primary me-2' %>
    <%= button_to 'Delete', @standard_complication, method: :delete, class: 'btn btn-outline-danger' %>
  </div>
</div>

<dl class="row">
  <dt class="col-sm-3">Standard Repair</dt>
  <dd class="col-sm-9">
    <%= @standard_complication.standard_repair %>
  </dd>
  <dt class="col-sm-3">Name</dt>
  <dd class="col-sm-9">
    <%= @standard_complication.name %>
  </dd>
  <dt class="col-sm-3">Method</dt>
  <dd class="col-sm-9">
    <%= @standard_complication.method %>
  </dd>
  <dt class="col-sm-3">Description</dt>
  <dd class="col-sm-9">
    <%= @standard_complication.description %>
  </dd>
  <dt class="col-sm-3">Level</dt>
  <dd class="col-sm-9">
    <%= @standard_complication.level %>
  </dd>
  <dt class="col-sm-3">Charge</dt>
  <dd class="col-sm-9">
    <%= number_to_currency(@standard_complication.charge) %>
  </dd>
</dl>
