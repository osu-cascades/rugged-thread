<table class="table table-hover" id="standard_inventory_items_table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">SKU</th>
      <th scope="col" class="text-end">Price</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% standard_inventory_items.each do |standard_inventory_item| %>
      <tr class="<%= dom_class(standard_inventory_item) %>" id="<%= dom_id(standard_inventory_item) %>">
        <td>
          <%= highlight(standard_inventory_item.name, params.dig(:query)) %>
        </td>
        <td>
          <%= highlight(standard_inventory_item.sku, params.dig(:query)) %>
        </td>
        <td class="text-end">
          <%= number_to_currency(standard_inventory_item.price) %>
        </td>
        <td class="text-end">
          <%= link_to 'Details', standard_inventory_item, class: 'btn btn-outline-secondary btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
