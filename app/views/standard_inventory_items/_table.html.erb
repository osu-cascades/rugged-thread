<table class="table table-hover table-borderless" id="standard_inventory_items_table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">SKU</th>
      <th scope="col" class="text-end">Price</th>
    </tr>
  </thead>
  <tbody>
    <% standard_inventory_items.each do |standard_inventory_item| %>
      <tr class="<%= dom_class(standard_inventory_item) %> clickable-row" id="<%= dom_id(standard_inventory_item) %>" data-href="<%= standard_inventory_item_path(standard_inventory_item) %>" tabindex="0">
        <td>
          <%= highlight(standard_inventory_item.name, params.dig(:query)) %>
        </td>
        <td>
          <%= highlight(standard_inventory_item.sku, params.dig(:query)) %>
        </td>
        <td class="text-end">
          <%= standard_inventory_item.price.format %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<script>
{
  function navigate(row) {
    const fakeLink = document.createElement("a");
    document.body.append(fakeLink);
    fakeLink.href = row.dataset.href
    fakeLink.click();
    fakeLink.remove();
  }
  const clickable_rows = document.getElementsByClassName("clickable-row");
  Array.prototype.forEach.call(clickable_rows, (row) => {
      row.addEventListener("click", () => {navigate(row);});
      row.addEventListener("keydown", (e) => {
        if (e.code === "Enter") {navigate(row);}
      });
  });
}
</script>
