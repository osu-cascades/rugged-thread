<p id="notice"><%= notice %></p>

<h1>Repairs</h1>

<table>
  <thead>
    <tr>
      <th>Standard repair</th>
      <th>Item</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @repairs.each do |repair| %>
      <tr>
        <td><%= repair.standard_repair_id %></td>
        <td><%= repair.item_id %></td>
        <td><%= repair.notes %></td>
        <td><%= link_to 'Show', repair %></td>
        <td><%= link_to 'Edit', edit_repair_path(repair) %></td>
        <td><%= link_to 'Destroy', repair, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

