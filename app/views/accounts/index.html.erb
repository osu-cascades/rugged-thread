<div class="row mb-5">
  <div class="col">
    <% if params[:show_archive] == 'true' %>
      <h1>Archived Accounts</h1>
    <% else %>
      <h1>Active Accounts</h1>
    <% end %>
  </div>
  <div class="col text-end">
    <%= link_to 'Add New Account', new_account_path, class: 'btn btn-outline-primary' %>
    <% if params[:show_archive] == 'true' %>
      <%= link_to 'Active Accounts', accounts_path(), class: 'btn btn-outline-success me-2' %>
    <% else %>
      <%= link_to 'Archived Accounts', accounts_path(show_archive: 'true'), class: 'btn btn-outline-success me-2' %>
    <% end %>
  </div>
</div>

<table class="table table-hover" id="accounts_table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Turn Around</th>
      <th scope="col">Cost Share</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @accounts.each do |account| %>
      <tr class="<%= dom_class(account) %>" id="<%= dom_id(account) %>">
        <td>
          <%= account %>
        </td>
        <td>
          <%= account.turn_around %>
        </td>
        <td>
          <%= account.cost_share %>
        </td>
        <td class="text-end">
          <%= link_to 'Details', account, class: 'btn btn-outline-secondary btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if params[:show_archive] == 'true' %>
  <%= pagination_nav(@pagy, accounts_path(page: @pagy.prev, show_archive: 'true'), accounts_path(page: @pagy.next, show_archive: 'true')) %>
<% else %>
  <%= pagination_nav(@pagy, accounts_path(page: @pagy.prev), accounts_path(page: @pagy.next)) %>
<% end %>
