<div class="row mb-5">
  <div class="col">
    <h1>Accounts</h1>
  </div>
  <div class="col text-end">
    <%= link_to 'Add New Account', new_account_path, class: 'btn btn-outline-primary' %>
  </div>
</div>

<table class="table table-hover" id="accounts_table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Turn Around</th>
      <th scope="col">Cost Share</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @accounts.each do |account| %>
      <tr class="<%= dom_class(account) %>" id="<%= dom_id(account) %>">
        <td>
          <%= link_to "#{account.name}", account %>
        </td>
        <td>
          <%= account.turn_around %>
        </td>
        <td>
          <%= account.cost_share %>
        </td>
        <td>
          <%= link_to 'Edit', edit_account_path(account), class: 'btn btn-light btn-sm mr-4' %>
          <%= link_to'Delete', account, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn text-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>